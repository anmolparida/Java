package Methods_And_Classes;

import java.util.Scanner;

public class Demo {

	   private static Scanner reader;

	public static void main(String args[]) {
	      String Str1 = new String("Welcome to Tutorialspoint.com");
	      String Str2 = new String("Tutorials" );
	      
	      String Str3 = "Welcome to Tutorialspoint.com";
	      String Str4 = "Welcome" ;
	      
	      String stringToReverse;
	      reader = new Scanner(System.in);
	      System.out.println("Enter String to Reverse: ");
	      stringToReverse = reader.next();
	      System.out.println(stringToReverse.length());
	    
	      System.out.println();
	      System.out.println("String3 Length :" + Str3.length());
	      System.out.println("String3 Length :" + Str4.length());
	      }
	}


